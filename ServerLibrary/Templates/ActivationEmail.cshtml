@using Data.DTOs
@model ActivationEmailModel

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kích hoạt tài khoản @Model.AppName</title>
</head>

<body style="margin: 0; padding: 0; font-family: 'Arial', sans-serif; background-color: #f4f4f4;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="background-color: #f4f4f4;">
        <tr>
            <td align="center">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0"
                    style="width: 600px; margin: 20px auto; background-color: #ffffff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                    <!-- Header -->
                    <tr>
                        <td
                            style="padding: 20px; background: linear-gradient(135deg, #4e4d95, #007bff); border-radius: 8px 8px 0 0; text-align: center;">
                            <img src="https://via.placeholder.com/150x50?text=Your+Logo" alt="Logo"
                                style="max-width: 150px; height: auto;" />
                            <h1 style="color: #ffffff; font-size: 24px; margin: 10px 0;">Kích hoạt ứng dụng !</h1>
                        </td>
                    </tr>
                    <!-- Body -->
                    <tr>
                        <td style="padding: 30px; color: #333333;">
                            <h2 style="font-size: 20px; color: #4e4d95; margin-top: 0;">Xin chào @Model.FullName,</h2>
                            <p style="font-size: 16px; line-height: 1.6; margin: 10px 0;">
                                Cảm ơn bạn đã chọn <strong>@Model.AppName</strong>! Bạn chỉ còn một bước nữa để bắt đầu
                                trải nghiệm ứng dụng tuyệt vời của chúng tôi.
                            </p>
                            <p style="font-size: 16px; line-height: 1.6; margin: 10px 0;">
                                Dùng mã kích hoạt dưới đây để cập nhật thông tin doanh nghiệp và kích hoạt tài khoản của
                                bạn:
                            </p>
                            <div
                                style="background-color: #e9ecef; padding: 15px; border-radius: 6px; text-align: center; margin: 20px 0;">
                                <strong style="font-size: 18px; color: #007bff;">Mã kích hoạt:
                                    @Model.ActivationCode</strong>
                            </div>
                            <p style="font-size: 16px; line-height: 1.6; margin: 10px 0;">
                                Nhấp vào nút dưới đây để truy cập form kích hoạt:
                            </p>
                            <table role="presentation" cellspacing="0" cellpadding="0" style="margin: 20px auto;">
                                <tr>
                                    <td
                                        style="border-radius: 6px; background: linear-gradient(40deg, #4e4d95, #007bff);">
                                        <a href="@Model.VerificationLink" style="display: inline-block; padding: 12px 30px; color: #ffffff;
                                         font-size: 16px; text-decoration: none; border-radius: 6px;">Kích hoạt
                                            ngay</a>
                                    </td>
                                </tr>
                            </table>
                            <p style="font-size: 14px; line-height: 1.6; margin: 10px 0; color: #666666;">
                                Nếu nút không hoạt động, sao chép và dán link sau vào trình duyệt:
                                <br><a href="@Model.VerificationLink"
                                    style="color: #007bff; text-decoration: none;">@Model.VerificationLink</a>
                            </p>
                            <p style="font-size: 14px; line-height: 1.6; margin: 10px 0; color: #666666;">
                                Hoặc bạn có thể sao chép mã kích hoạt dưới đây và dán vào form kích hoạt:
                                <br><a href="https://app.autuna.com/auth/activate-license"
                                    style="color: #007bff; text-decoration: none;">https://app.autuna.com/auth/activate-license</a>
                            </p>
                            <p style="font-size: 16px; line-height: 1.6; margin: 20px 0 0;">
                                Cần hỗ trợ? Liên hệ chúng tôi qua <a href="mailto:support@autuna.com"
                                    style="color: #007bff; text-decoration: none;">support@autuna.com</a>.
                            </p>
                        </td>
                    </tr>
                    <!-- Footer -->
                    <tr>
                        <td
                            style="padding: 20px; background-color: #f8f9fa; border-radius: 0 0 8px 8px; text-align: center; font-size: 14px; color: #666666;">
                            <p style="margin: 0 0 10px;">Kết nối với chúng tôi:</p>
